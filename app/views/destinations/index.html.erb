<% provide(:title, "Destinations") %>

<div class="dest-index">
  <div class="row">
    <div class="span2">
      <form class="destination-index-form">
        <fieldset>
          <legend>Filter Locations</legend>
          <label>Location:</label>
          <%= form_tag(destinations_path,
                       :method => :get) do %>
              <%= select_tag(:name,
                             options_from_collection_for_select(Destination.all, :name, :name)) %>
              <%= submit_tag %>
          <% end %>
          <% @destinations.each do |destination| %>
              <label class="checkbox">
                <input type="checkbox"> <%= destination.name  %>
              </label>
          <% end %>
          <div class="center">
            <button type="submit" class="btn">Submit</button>
          </div>
        </fieldset>
      </form>
    </div>
    <div class="span10">
      <% @destinations.each do |destination| %>
          <div class="row">
            <p class="lead span10"><%= link_to destination.name, destination  %></p>
            <div class="span7">
              <% unless destination.dest_image.nil? %>
                  <%= link_to image_tag(destination.dest_image.url), destination %>
              <% end %>
            </div>
            <div class="span3 zebra-index no-left-margin">
              <p><%= raw truncate(strip_tags(destination.content), :length => 200) %></p>
              <%= link_to 'Show', destination %>
              <% if current_user %> |
                <%= link_to 'Edit', edit_destination_path(destination) %> |
                <%= link_to 'Destroy', destination, method: :delete,
                            data: { confirm: 'Are you sure?' } %>
              <% end %>
            </div>
          </div>
          <div class="span10 no-left-margin">
            <h5>Featured Vacation Rentals in <%= link_to destination.name, destination  %></h5>
            <ul class="thumbnails">
              <% destination.rentals.each do |rental| %>
                  <li class="span2 zebra">
                    <div class="thumbnail">
                      <% unless rental.photos.first.nil? %>
                          <%= link_to image_tag(rental.photos.first.url), rental %>
                      <% end %>
                      <p><%= link_to rental.name, rental %></p>
                      <div class="destination-show-link">
                        <ul class="unstyled">
                          <li class="pull-left">Sleeps: <%= rental.sleeps %></li>
                          <li class="pull-left left-10-margin">Bd: <%= rental.bedrooms %></li>
                          <li class="clear"> |
                            <% rental.features.limit(3).each do |feature| %>
                                <% unless feature.name.blank? %>
                                    <%= feature.name %> |
                                <% end %>
                            <% end %>
                          </li>
                        </ul>
                      </div>
                    </div>
                  </li>
              <% end %>
            </ul>
          </div>
      <% end %>
    </div>
  </div>
</div>

<br />

<% if current_user %>
    <%= link_to 'New Destination', new_destination_path,
                class: 'btn btn-warning btn-large' %>
<% end %>

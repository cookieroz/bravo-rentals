<%= simple_form_for @destination,
                    :html => { :class => 'form-horizontal', :multipart => true } do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs control-group">
      <%= f.input :name %>
      <%= f.input :address %>
      <%= f.input :content, :as => :ckeditor,
                  :input_html => { :toolbar => 'Full' } %>
      <%= f.input :todo, :as => :ckeditor,
                  :input_html => { :toolbar => 'Full' } %>
      <%= f.input :airport, :as => :ckeditor,
                  :input_html => { :toolbar => 'Full' } %>
      <%= f.input :rentcar, :as => :ckeditor,
                  :input_html => { :toolbar => 'Full' } %>
      <%= f.input :weather, :as => :ckeditor,
                  :input_html => { :toolbar => 'Full' } %>
    </div>

    <%= f.simple_fields_for :dest_image do |ff| %>
        <%#= ff.file_field :image, class: 'controls' %>
        <%#= ff.hidden_field :image_cache %>
        <% if ff.object.dest_image? %>
            <%= image_tag ff.object.image_url %>
            <%= ff.file_field :image %>
        <% else %>
            <%= ff.file_field :image %>
            <%= ff.hidden_field :image_cache %>
        <% end %>
    <% end %>
    <%#= image_tag(@destination.dest_image_url) if @destination.image_url? %>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
<% end %>
